{
  "name": "@vaneui/ui",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vars": {
      "import": "./dist/vars.css",
      "default": "./dist/vars.css"
    },
    "./css": {
      "import": "./dist/ui.css",
      "default": "./dist/ui.css"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "build:js": "npm run type-check && npm run clean && rollup -c --bundleConfigAsCjs",
    "build:css:vars": "npx @tailwindcss/cli -i ./src/components/theme/vars.css -o ./dist/vars.css",
    "build:css:ui": "npx @tailwindcss/cli -i src/components/index.css -o ./dist/ui.css",
    "watch:css:vars": "npx @tailwindcss/cli --watch -i ./src/components/theme/vars.css -o ./dist/vars.css",
    "watch:css:ui": "npx @tailwindcss/cli --watch -i src/components/index.css -o ./dist/ui.css",
    "build": "npm run clean && npm run build:js && npm run build:css:ui && npm run build:css:vars",
    "watch": "npm run clean && concurrently \"rollup -c --bundleConfigAsCjs -w\" \"npm run watch:css:ui\" \"npm run watch:css:vars\"",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@tailwindcss/cli": "^4.0.14",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^5.0.10",
    "rollup": "^4.34.9",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "ts-jest": "^29.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  }
}
